<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lyg.constructd.LoginActivity">

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/buttonOAuthLoginImg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Api result"
        android:id="@+id/api_result_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="접근 토큰"
        android:id="@+id/oauth_access_token"

        android:layout_marginTop="27dp"
        android:layout_below="@+id/api_result_text"
        android:layout_alignStart="@+id/buttonOAuthLoginImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리프레쉬 토큰"
        android:id="@+id/oauth_refresh_token"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expires"
        android:id="@+id/oauth_expires"
        android:layout_above="@+id/buttonOAuthLoginImg"
        android:layout_alignStart="@+id/oauth_refresh_token"
        android:layout_marginBottom="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 타입"
        android:id="@+id/oauth_type"

        android:layout_above="@+id/oauth_refresh_token"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 상태"
        android:id="@+id/oauth_state"

        android:layout_marginTop="31dp"
        android:layout_below="@+id/oauth_access_token"
        android:layout_alignStart="@+id/oauth_access_token" />

</RelativeLayout>
